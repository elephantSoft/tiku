.goods-list{
  background:#f2f2f2;
  color:#333;
}

.goods-item{
  background:#fff;
  width:100%;
  box-sizing: border-box;
  padding:30rpx;
  height:340rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom:20rpx;
}

.goods-tit{
  font-size: 30rpx;
  margin-bottom:10rpx;
}

.goods-attach{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
}

.goods-attach image{
  display: block;
  width:28rpx;
  height:28rpx;
}

.goods-attach text{
  margin-left:10rpx;
  color:#999;
}

.goods-about{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.teachers{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.teacher-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right:50rpx;
}

.teacher-item image{
  display: block;
  width:70rpx;
  height:70rpx;
  border-radius: 35rpx;
}

.teacher-item text{
  font-size: 26rpx;
  color:#999;
}

.sail-info{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price{
  font-size: 26rpx;
  color:#ff6c00;
}

.price text{
  font-size: 50rpx;
  height:70rpx;
}

.seat{
  font-size: 26rpx;
  color:#999;
}

.seat text{
  color:#ff6c00;
}